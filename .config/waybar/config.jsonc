{
  // "layer": "top", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  // "width": 1280, // Waybar width
  //"margin": "2 2 2 2",
  "modules-left": [
    "sway/workspaces",
    "sway/mode"
  ],
  //"modules-center": [],
  "modules-right": [
    "network",
    "pulseaudio",
    "cpu",
    "memory",
    "battery",
    "backlight",
    "keyboard-state",
    "sway/language",
    "clock",
    "tray",
